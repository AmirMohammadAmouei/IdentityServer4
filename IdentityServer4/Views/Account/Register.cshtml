@model RegisterViewModels

<h1 class="text-secondary mt-5">Register</h1>

<div class="text-danger" asp-validation-summary="All"></div>
<form asp-action="Register" method="post" class="m-lg-5">
    <div class="form-group col-md-3 mt-5">
        <label asp-for="Name">نام کاربری</label>
        <input type="text" asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>
    <div class="form-group col-md-3 mt-2">
        <label asp-for="Email">آدرس ایمیل</label>
        <input type="text" asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="form-text text-danger"></span>
    </div>
    <div class="form-group col-md-3 mt-2">
        <label asp-for="Password">رمز عبور</label>
        <input type="password" asp-for="Password" class="form-control">
        <span asp-validation-for="Password" class="form-text text-danger"></span>
    </div>
    <div class="form-group col-md-3 mt-2">
        <label asp-for="ConfirmPassword">تکرار رمز عبور</label>
        <input type="password" asp-for="ConfirmPassword" class="form-control">
        <span asp-validation-for="ConfirmPassword" class="form-text text-danger"></span>
    </div>

    <div class="form-check m-3">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" asp-for="RememberMe">مرا بخاطر بسپار</label>
    </div>
    <button type="submit" class="btn btn-primary">ثبت نام</button>
</form>


@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
